@model EmployeeViewModel
@inject IDepartmentRepository DeptRepo
@{
    ViewData["Title"] = "Create";
    var departments = new SelectList(DeptRepo.GetAll().Result, "Id", "Name");
}

<h1>Add New Employeew</h1>
<br />
<br />

<div class="row mb-3">
    <div class="col-8">
        <form asp-action="Create" asp-controller="Employee" enctype="multipart/form-data">
            @* <partial name="Partial/_CreateUpdatePartialView" model="@Model" /> *@
            <partial name="Partial/CreateUpdateEmployeePartialView" model="@Model" />
            <br />
            <input type="submit" value="Add" class="btn btn-primary" />
