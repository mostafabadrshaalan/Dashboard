@model string

<div class="btn-group" role="group">
   <td>
        <a class="btn btn-success" asp-action="Details" asp-route-id="@Model" data-toggle="tooltip" title="Details">
            <i class="fas fa-eye"></i> Details
        </a>
   </td>
    <td>
        <a class="btn btn-warning" asp-action="Update" asp-route-id="@Model" data-toggle="tooltip" title="Update">
            <i class="fas fa-edit"></i> Update
        </a>
    </td>
   <td>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model" data-toggle="tooltip" title="Delete">
            <i class="fas fa-trash"></i> Delete
        </a>
   </td>
</div>