@model DepartmentViewModel
@{
    ViewData["Title"] = "Update";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Update Department</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Update" asp-controller="Department" method="post">
                <input hidden asp-for="Id" />

                <div class="form-group">
                    <label asp-for="@Model.Code" class="font-weight-bold">Code</label>
                    <input asp-for="@Model.Code" class="form-control" />
                    <span asp-validation-for="@Model.Code" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Name" class="font-weight-bold">Name</label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary btn-save">
                        <i class="fas fa-save"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-light btn-back">
                        <i class="fas fa-arrow-left"></i> Back To List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<style>
    /* Custom style for the "Back To List" button */
    .btn-back {
        background-color: #6c757d; /* Bootstrap's secondary color */
        color: #fff; /* White text */
        border-color: #6c757d; /* Matching border color */
    }

        .btn-back:hover {
            background-color: #495057; /* Darker color on hover */
            border-color: #495057;
        }

    /* Custom style for the "Save" button */
    .btn-save {
        color: #fff; /* White text */
        border-color: #007bff; /* Bootstrap's primary color */
    }

        .btn-save:hover {
            background-color: #0056b3; /* Darker color on hover */
            border-color: #0056b3;
        }
</style>
