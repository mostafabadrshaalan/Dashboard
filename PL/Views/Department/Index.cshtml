@model IEnumerable<DepartmentViewModel>
@{
    ViewData["Title"] = "Department Management";
}

<style>
    .department-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.2s;
    }

        .department-card:hover {
            transform: scale(1.02);
        }

        .department-card .card-body {
            padding: 1.25rem;
        }

        .department-card h5 {
            font-size: 1.25rem;
            margin-bottom: 0.5rem;
        }

        .department-card p {
            color: #6c757d;
        }
</style>

<div class="container mt-4">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="row mb-3">
        <div class="col-md-6">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Department
            </a>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card department-card">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">Code: @item.Code</p>
                        <partial name="_ButtonsPartialView" model="item.Id.ToString()" />
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning mt-5">
            <h3>No Departments Found</h3>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Enable Bootstrap tooltips
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}
